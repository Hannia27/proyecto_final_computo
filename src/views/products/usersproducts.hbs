<div class="jumbotron mt-4">
<b><h3 class="text-center  display-4"><i class='bx bx-badge-check'>NUESTROS PRODUCTOS</i></h3></b>
<br>
<div class="row">
    {{#each products}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                   {{name}}
                </h4>
                <p>{{description}}</p>
                <p>{{category}}</p>
                <p>{{composition}}</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
</div>